set ns [new Simulator]
#creating tracefile
set traceFile [open 2.tr w]
$ns trace-all $traceFile
#creating namfile
set namFile [open out2.nam w]
$ns namtrace-all $namFile

proc finish {} {
	#global because ns, tracefile and namfile are not known to finish procedure
	global ns namFile traceFile
	
	$ns flush-trace
	
	#closing the files
	close $traceFile
	close $namFile
	exec awk -f second.awk 2.tr &
	exec nam out2.nam &
	exit 0
	}

#creating 4 nodes
for {set i 0} {$i < 4} {incr i} {
	set n($i) [$ns node]
}

#create duplex links between the nodes
$ns duplex-link $n(0) $n(2) 2Mb 10ms DropTail
$ns duplex-link $n(1) $n(2) 2Mb 10ms DropTail
$ns duplex-link $n(2) $n(3) 900kb 10ms DropTail

$ns queue-limit $n(0) $n(2) 10

#set TELNET connection between n(0) and n(3)
set tcp0 [new Agent/TCP]
$ns attach-agent $n(0) $tcp0
set sink0 [new Agent/TCPSink]
$ns attach-agent $n(3) $sink0
$ns connect $tcp0 $sink0

#attach telnet application over TCP
set telnet [new Application/Telnet]
$telnet attach-agent $tcp0
$telnet set interval 0

#set tcp ftp connection between n(1) and n(3)
set tcp1 [new Agent/TCP]
$ns attach-agent $n(1) $tcp1
set sink1 [new Agent/TCPSink]
$ns attach-agent $n(3) $sink1
$ns connect $tcp1 $sink1

#attach telnet application over tcp
set ftp [new Application/FTP]
$ftp attach-agent $tcp1
$ftp set type_ FTP

#schedule events
$ns at 0.5 "$telnet start"
$ns at 0.6 "$ftp start"
$ns at 24.5 "$telnet stop"
$ns at 24.5 "$ftp stop"
$ns at 25 "finish"

$ns run
